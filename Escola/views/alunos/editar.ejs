<%- include('../includes/header.ejs', {titulo: 'Atualizar Professores' }) %>

<main>
    <h2>Aualizando dados do Aluno</h1>
    <form action="/alunos/editar/<%= aluno.id_aluno %>" method="POST" class="form">
        <div class="form-group">
            <label >Nome do Aluno</label>
            <input type="text" name="nome" value="<%= aluno.nome %>" required>
        </div>
        <div class="form-group">
            <label >Idade do Aluno</label>
            <input type="text" name="idade" value="<%= aluno.idade %>" required>
        </div>
        <div class="form-group">
            <label>Sexo</label>
            <select name="sexo" required>
                <option value="F" >Feminino</option>
                <option value="M" >Masculino</option>
            </select>
        </div>
        <div class="form-group">
            <label >Foto do Aluno</label>
            <input type="text" name="foto" value="<%= aluno.foto %>" required>
        </div>
        <div class="form-group">
            <label>Turmas</label>
            <select name="id_turma" required>
                <% for (let turma of dadosTurmas ){ %>
                <option value="<%= turma.id_turma %>" <%= aluno.id_turma == turma.id_turma ? 'selected' : '' %>>
                    <%= turma.nome_turma %></option>
                <% } %>
            </select>
        </div>
        <button type="submit" class="btn btn-principal">Adicionar</button>
        <a href="/alunos/listar" class="btn btn-secundario">Cancelar</a>
    </form>
</main>

<%- include('../includes/footer.ejs') %>