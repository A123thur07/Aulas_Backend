<%- include('../includes/header.ejs', {titulo: 'Cadastro Turmas' }) %>

<main>
    <h2>Cadastro de nova turma</h1>
    <form action="/turmas/editar/<%= turma.id_turma %>" method="POST" class="form">
        <div class="form-group">
            <label for="nome_turma">Nome da Turma</label>
            <input type="text" name="nome_turma">
        </div>
        <button type="submit" class="btn btn-principal">Adicionar</button>
        <a href="/turmas/listar" class="btn btn-secundario">Cancelar</a>
    </form>
</main>

